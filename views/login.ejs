<!DOCTYPE html>
<html lang="en">
  <%- include('./head.ejs') %>

  <body>
    <%- include('./nav.ejs') %> <% if(typeof alert != 'undefined'){ %> <%
    alert.forEach((err)=>{ %>
    <p><%= err.msg %></p>
    <% }) %> <% } %>

    <form class="login card" action="/login" method="POST" autocomplete="on">
      <h1>Login</h1>
      <p>Don't have an account? <a href="/signup">Sign up </a></p>

      <section>
        <label for="username">Username</label>
        <input
          id="username"
          name="username"
          type="text"
          autocomplete="username"
          required
          autofocus
        />
      </section>
      <section>
        <label for="current-password">Password</label>
        <input
          id="current-password"
          name="password"
          type="password"
          autocomplete="current-password"
          required
        />
      </section>
      <button type="submit">Login</button>
    </form>
  </body>
</html>
