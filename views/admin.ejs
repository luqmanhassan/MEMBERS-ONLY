<html lang="en">
  <%- include('./head.ejs') %>

  <body>
    <%- include('./nav.ejs') %> <% if(typeof alert != 'undefined'){ %> <%
    alert.forEach((err)=>{ %>
    <p><%= err.msg %></p>
    <% }) %> <% } %>

